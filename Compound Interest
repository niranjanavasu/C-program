#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

   double principal,rate,time,compoundinterest,amount;
    scanf("%lf",&principal);
    scanf("%lf",& rate);
    scanf("%lf",&time);
    if(principal <=0 || rate <=0 || time <=0){
        printf("invalid input");
    return 0;
    }
    
    amount= principal * pow ((1+ rate /100),time);
    compoundinterest = amount - principal ;
    printf("%.2lf\n ", compoundinterest);
    return 0;
}
